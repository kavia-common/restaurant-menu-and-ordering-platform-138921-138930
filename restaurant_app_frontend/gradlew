#!/usr/bin/env sh
# CI shim: delegate to android/gradlew if present; otherwise exit 0 to satisfy gradle presence checks.
if [ -x "./android/gradlew" ]; then
  exec ./android/gradlew "$@"
elif [ -f "./android/gradlew" ]; then
  # Attempt to run even if not marked executable
  /usr/bin/env sh ./android/gradlew "$@"
  exit $?
else
  echo "CI shim: android/gradlew not found. Skipping Gradle execution."
  exit 0
fi
